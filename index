<body>

  <div class="card">

    <!-- =========== GAMBAR ATAS =========== -->
    <img src="Logo Jata.svg" class="header-image" alt="Atas">

    <h1>Kalkulator Minggu Kehamilan</h1>
    <div class="subtitle">Berdasarkan tarikh LMP (hari pertama haid terakhir)</div>

    <label for="lmpDate">Tarikh LMP</label>
    <input type="date" id="lmpDate">

    <button onclick="kiraMinggu()">Kira Minggu Kehamilan</button>

    <div id="error" class="error"></div>
    <div id="result" class="result"></div>

    <!-- =========== GAMBAR BAWAH =========== -->
    <img src="Logo Bawah.svg" class="footer-image" alt="Bawah">

    <div class="small">
      *Ini hanyalah anggaran umum. Untuk pengesahan umur kehamilan dan EDD,
      sila rujuk doktor / fasiliti kesihatan.
    </div>

  </div>

  <script>
    function formatTarikh(date) {
      const d = date.getDate().toString().padStart(2, '0');
      const m = (date.getMonth() + 1).toString().padStart(2, '0');
      const y = date.getFullYear();
      return `${d}/${m}/${y}`;
    }

    function kiraMinggu() {
      const lmpInput = document.getElementById('lmpDate').value;
      const resultEl = document.getElementById('result');
      const errorEl = document.getElementById('error');

      errorEl.textContent = "";
      resultEl.style.display = "none";
      resultEl.innerHTML = "";

      if (!lmpInput) {
        errorEl.textContent = "Sila pilih tarikh LMP terlebih dahulu.";
        return;
      }

      const lmp = new Date(lmpInput);
      lmp.setHours(12, 0, 0, 0);

      const today = new Date();
      today.setHours(12, 0, 0, 0);

      const MS_DAY = 24 * 60 * 60 * 1000;
      const diffDays = Math.floor((today - lmp) / MS_DAY);

      if (diffDays < 0) {
        errorEl.textContent = "Tarikh LMP berada pada masa hadapan.";
        return;
      }

      const weeks = Math.floor(diffDays / 7);
      const days = diffDays % 7;

      const edd = new Date(lmp.getTime() + 280 * MS_DAY);

      resultEl.innerHTML = `
        <div class="result-title">Keputusan</div>
        <div><strong>Tarikh hari ini:</strong> ${formatTarikh(today)}</div>
        <div><strong>Tarikh LMP:</strong> ${formatTarikh(lmp)}</div>
        <div><strong>Umur kehamilan:</strong> ${weeks} minggu ${days > 0 ? days + " hari" : ""}</div>
        <div><strong>EDD:</strong> ${formatTarikh(edd)}</div>
      `;

      resultEl.style.display = "block";
    }
  </script>

